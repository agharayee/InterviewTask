@model Test.Data.Entities.PersonalDetails

 @{

     ViewBag.Title = "Submit CV file";
 }
<h3>Upload File</h3>
<form asp-controller="PersonalDetails" asp-action="Create" method="post">
    <div class="form-group row">
        <span asp-validation-summary="All" class="text-danger"> </span>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="CVFiles" class="form-control custom-file-input"  />
        </div>
        
    </div>
</form>